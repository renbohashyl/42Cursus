NAME		= libft.a

CC			= gcc
CFLAGS		= -Wall -Werror -Wextra
DBGFLAG		= -g3

INC			= ./libft.h

SRCS		= ft_atoi.c				\
			  ft_isalnum.c			\
			  ft_isalpha.c			\
			  ft_isascii.c			\
			  ft_isdigit.c			\
			  ft_isprint.c			\
			  ft_memcmp.c			\
			  ft_strncmp.c			\
			  ft_strrncmp.c			\
			  ft_tolower.c			\
			  ft_toupper.c			\
			  ft_itoa.c				\
			  ft_split.c			\
			  ft_strchr.c			\
			  ft_strcpy.c			\
			  ft_strdup.c			\
			  ft_strjoin.c			\
			  ft_strmapi.c			\
			  ft_strnstr.c			\
			  ft_strrchr.c			\
			  ft_strncpy.c			\
			  ft_strtrim.c			\
			  ft_substr.c			\
			  ft_strlcat.c			\
			  ft_strlcpy.c			\
			  ft_strlen.c			\
			  ft_bzero.c			\
			  ft_calloc.c			\
			  ft_memchr.c			\
			  ft_memcpy.c			\
			  ft_memmove.c			\
			  ft_memset.c			\
			  ft_realloc.c			\
			  ft_putchar_fd.c		\
			  ft_putendl_fd.c		\
			  ft_putnbr_fd.c		\
			  ft_putstr_fd.c		\
			  ft_striteri.c			\
			  ft_lstnew.c			\
			  ft_lstadd_front.c		\
			  ft_lstsize.c			\
			  ft_lstlast.c			\
			  ft_lstadd_back.c		\
			  ft_lstclear.c			\
			  ft_lstdelone.c		\
			  ft_lstiter.c			\
			  ft_lstmap.c			\

OBJS		= $(addprefix $(OBJDIR),$(SRCS:.c=.o))

#dirs
SRCDIR		= ./
OBJDIR		= ../obj/libft/

all : $(OBJDIR) $(NAME)

$(OBJDIR) :
	mkdir -p $(OBJDIR)

$(OBJDIR)%.o : $(SRCDIR)%.c
	$(CC) $(CFLAGS) $(DBGFLAG) -c $< -o $@

$(NAME) : $(OBJS)
	ar crs $@ $^

clean :
	rm -rf $(OBJDIR)

fclean : clean
	rm -f $(NAME)

re : fclean all

.PHONY : all clean fclean all
